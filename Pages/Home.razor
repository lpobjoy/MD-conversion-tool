                            <div class="card">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">Preview</h5>
                                </div>
                                <div class="card-body preview-content">
                                    @((MarkupString)previewHtml)
                                </div>
                            </div>
