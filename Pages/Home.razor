@code {
    private string markdownContent = @"# Sample Markdown Document

## Introduction
This is a **sample document** with various markdown elements.

## Mermaid Diagram Example

```mermaid
graph LR
    A[Start] --> B{Decision}
    B -->|Yes| C[Action 1]
    B -->|No| D[Action 2]
    C --> E[End]
    D --> E
```

## Features
- Bullet point 1
- Bullet point 2
- Bullet point 3

## Code Example
```csharp
public class Example {
    public void Method() {
        Console.WriteLine(""Hello World"");
    }
}
```

## Table Example
| Column 1 | Column 2 | Column 3 |
|----------|----------|----------|
| Data 1   | Data 2   | Data 3   |
| Data 4   | Data 5   | Data 6   |
";

    private ExportFormat selectedFormat = ExportFormat.Files; // Legacy: Changed from Pandoc to Files to prevent duplicate conversion
    private string conversionMode = "pandoc"; // "pandoc" or "custom"
    private string outputFormat = "docx"; // "docx", "pdf", or "html"
    private string pandocCommand = "";
    private string fileName = "document";
    private bool isConverting = false;
    private string statusMessage = "";
    private bool statusSuccess = false;
    private bool showPreview = false;
    private string previewHtml = "";
    private bool showAboutModal = false;

    // Note: Mermaid is now auto-initialized in index.html using ESM import
    // No need for OnAfterRenderAsync initialization

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB limit
                using var reader = new StreamReader(stream);
                markdownContent = await reader.ReadToEndAsync();
                fileName = Path.GetFileNameWithoutExtension(file.Name);
                statusMessage = $"File '{file.Name}' loaded successfully!";
                statusSuccess = true;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                statusMessage = $"Error loading file: {ex.Message}";
                statusSuccess = false;
            }
        }
    }

    private async Task ConvertDocument()
    {
        if (string.IsNullOrWhiteSpace(markdownContent))
        {
            statusMessage = "Please enter some markdown content first.";
            statusSuccess = false;
            return;
        }

        isConverting = true;
        statusMessage = "Step 1/6: Analyzing markdown content...";
        statusSuccess = true;
        StateHasChanged();

        try
        {
            // Step 1a: Extract Mermaid diagrams from markdown (don't convert yet)
            var diagrams = MarkdownParser.ExtractMermaidDiagrams(markdownContent);
            
            // Step 1b: Extract SVG references (external files or embedded SVG)
            statusMessage = "Step 1/6: Extracting SVG references...";
            StateHasChanged();
            await Task.Delay(50);
            
            var svgRefs = await SvgHandler.ExtractSvgReferencesAsync(markdownContent);
            Console.WriteLine($"Found {svgRefs.Count} SVG reference(s) in markdown");
            
            // Determine if we need PNG conversion based on output format
            // DOCX, PDF, PPTX, and Beamer need PNG; HTML and Reveal.js can use SVG
            bool needsPng = (outputFormat == "docx" || outputFormat == "pdf" || outputFormat == "pptx" || outputFormat == "beamer");
            string svgProcessedMarkdown = markdownContent;
            
            if (!diagrams.Any())
            {
                // No diagrams, but still need to handle SVG refs and respect output format
                statusMessage = "No Mermaid diagrams found. Processing content...";
                StateHasChanged();
                await Task.Delay(100);
                
                // Step 4: Process SVG references if any exist
                if (svgRefs.Any())
                {
                    statusMessage = $"Processing {svgRefs.Count} SVG reference(s)...";
                    StateHasChanged();
                    await Task.Delay(100);
                    
                    svgProcessedMarkdown = await SvgHandler.ProcessSvgReferencesAsync(
                        markdownContent, 
                        svgRefs, 
                        convertToPng: needsPng
                    );
                }
                
                // Generate output based on selected format
                if (conversionMode == "pandoc")
                {
                    statusMessage = $"Converting with Pandoc WASM to {outputFormat.ToUpper()}...";
                    StateHasChanged();
                    await Task.Delay(100);
                    
                    try
                    {
                        byte[]? outputBytes = null;
                        string mimeType = "";
                        string fileExtension = "";
                        
                        if (outputFormat == "docx")
                        {
                            outputBytes = await PandocService.ConvertMarkdownToDocxAsync(svgProcessedMarkdown);
                            mimeType = "application/vnd.openxmlformats-officedocument.wordprocessingml.document";
                            fileExtension = "docx";
                        }
                        else if (outputFormat == "pdf")
                        {
                            outputBytes = await PandocService.ConvertMarkdownToPdfAsync(svgProcessedMarkdown);
                            if (outputBytes != null)
                            {
                                var htmlContent = System.Text.Encoding.UTF8.GetString(outputBytes);
                                await JSRuntime.InvokeVoidAsync("openHtmlForPrint", htmlContent, $"{fileName}.pdf");
                                
                                statusMessage = "✅ PDF preview opened! Use browser Print → Save as PDF";
                                statusSuccess = true;
                            }
                            else
                            {
                                statusMessage = "❌ PDF generation failed - no output from Pandoc";
                                statusSuccess = false;
                            }
                            return; // Don't trigger download
                        }
                        else if (outputFormat == "html")
                        {
                            outputBytes = await PandocService.ConvertMarkdownToPdfAsync(svgProcessedMarkdown);
                            mimeType = "text/html";
                            fileExtension = "html";
                        }
                        else if (outputFormat == "pptx")
                        {
                            outputBytes = await PandocService.ConvertMarkdownToPptxAsync(svgProcessedMarkdown);
                            mimeType = "application/vnd.openxmlformats-officedocument.presentationml.presentation";
                            fileExtension = "pptx";
                        }
                        else if (outputFormat == "beamer")
                        {
                            outputBytes = await PandocService.ConvertMarkdownToBeamerAsync(svgProcessedMarkdown);
                            mimeType = "application/x-latex";
                            fileExtension = "tex";
                        }
                        else if (outputFormat == "revealjs")
                        {
                            outputBytes = await PandocService.ConvertMarkdownToRevealJsAsync(svgProcessedMarkdown);
                            mimeType = "text/html";
                            fileExtension = "html";
                        }
                        
                        if (outputBytes != null && outputBytes.Length > 0)
                        {
                            var base64 = Convert.ToBase64String(outputBytes);
                            await JSRuntime.InvokeVoidAsync("downloadFile", $"{fileName}.{fileExtension}", mimeType, base64);
                            
                            statusMessage = $"✅ Successfully converted to {outputFormat.ToUpper()} using Pandoc WASM!";
                            statusSuccess = true;
                        }
                        else
                        {
                            statusMessage = "❌ Pandoc WASM returned empty result";
                            statusSuccess = false;
                        }
                    }
                    catch (Exception ex)
                    {
                        statusMessage = $"❌ Pandoc WASM error: {ex.Message}";
                        statusSuccess = false;
                    }
                }
                else
                {
                    // Custom converter mode
                    var html = Markdig.Markdown.ToHtml(svgProcessedMarkdown);
                    await GenerateOutputFile(html, new List<MermaidDiagram>());
                }
                
                return;
            }

            Console.WriteLine($"Found {diagrams.Count} Mermaid diagrams");

            // Step 2: Render Mermaid diagrams to SVG
            statusMessage = $"Step 2/6: Rendering {diagrams.Count} Mermaid diagram(s) to SVG...";
            StateHasChanged();
            await Task.Delay(100);

            foreach (var diagram in diagrams)
            {
                try
                {
                    var svgResult = await JSRuntime.InvokeAsync<string>("renderMermaidOriginal", diagram.Code);
                    diagram.RenderedSvg = svgResult;
                    Console.WriteLine($"Rendered diagram to SVG");
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error rendering diagram: {ex.Message}");
                    diagram.RenderedSvg = $"<!-- Error rendering: {ex.Message} -->";
                }
            }
            
            // Step 3: Convert Mermaid diagrams to PNG (for DOCX/PDF) or keep as SVG (for HTML)
            // needsPng already declared above
            
            if (!needsPng && outputFormat == "html")
            {
                statusMessage = $"Step 3/6: Keeping Mermaid diagrams as SVG for web...";
                StateHasChanged();
                await Task.Delay(50);
            }
            else
            {
                statusMessage = $"Step 3/6: Converting Mermaid diagrams to high-quality PNG...";
                StateHasChanged();
                await Task.Delay(100);
                
                foreach (var diagram in diagrams)
                {
                    try
                    {
                        // Convert to PNG with proper aspect ratio preservation
                        var pngBase64 = await JSRuntime.InvokeAsync<string>("convertSvgToPng", diagram.RenderedSvg, 1600, 1200);
                        if (!string.IsNullOrEmpty(pngBase64))
                        {
                            diagram.RenderedPng = pngBase64;
                            Console.WriteLine($"Converted Mermaid diagram to PNG successfully");
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error converting Mermaid to PNG: {ex.Message}");
                    }
                }
            }
            
            // Step 4: Process SVG references (convert to PNG for DOCX/PDF, embed for HTML)
            statusMessage = $"Step 4/6: Processing {svgRefs.Count} SVG reference(s)...";
            StateHasChanged();
            await Task.Delay(100);
            
            // svgProcessedMarkdown already declared above, update it if there are SVG refs
            if (svgRefs.Any())
            {
                svgProcessedMarkdown = await SvgHandler.ProcessSvgReferencesAsync(
                    markdownContent, 
                    svgRefs, 
                    convertToPng: needsPng
                );
                Console.WriteLine($"✅ Processed {svgRefs.Count} SVG references");
            }
            
            // Step 5: Handle "Files" and "Pandoc" formats - process in memory
            if (selectedFormat == ExportFormat.Files || selectedFormat == ExportFormat.Pandoc)
            {
                // Step 5: Update markdown in memory (no download)
                statusMessage = $"Step 5/6: Updating markdown with image references...";
                StateHasChanged();
                await Task.Delay(100);
                
                // Start with SVG-processed markdown (already has SVG refs as data URIs)
                string updatedMarkdown = svgProcessedMarkdown;
                Console.WriteLine($"Original markdown length: {markdownContent.Length}");
                
                for (int i = 0; i < diagrams.Count; i++)
                {
                    var diagram = diagrams[i];
                    
                    // More robust pattern - match the entire mermaid code block
                    var pattern = @"```mermaid\s*\n" + Regex.Escape(diagram.Code.Trim()) + @"\s*\n```";
                    var imageRef = $"![Mermaid Diagram {i + 1}](mermaid-diagram-{i + 1}.png)";
                    
                    Console.WriteLine($"Attempting to replace diagram {i + 1}");
                    Console.WriteLine($"Pattern: {pattern.Substring(0, Math.Min(100, pattern.Length))}...");
                    Console.WriteLine($"Looking for code: {diagram.Code.Substring(0, Math.Min(50, diagram.Code.Length))}...");
                    
                    var beforeLength = updatedMarkdown.Length;
                    updatedMarkdown = Regex.Replace(updatedMarkdown, pattern, imageRef, RegexOptions.Singleline);
                    var afterLength = updatedMarkdown.Length;
                    
                    if (beforeLength != afterLength)
                    {
                        Console.WriteLine($"✓ Replaced diagram {i + 1} (length changed from {beforeLength} to {afterLength})");
                    }
                    else
                    {
                        Console.WriteLine($"✗ No replacement made for diagram {i + 1} - trying alternative pattern");
                        
                        // Try a more flexible pattern
                        var flexiblePattern = "```mermaid[\\s\\S]*?" + Regex.Escape(diagram.Code.Trim().Split('\n')[0]) + "[\\s\\S]*?```";
                        updatedMarkdown = Regex.Replace(updatedMarkdown, flexiblePattern, imageRef, RegexOptions.Singleline);
                        
                        if (updatedMarkdown.Length != beforeLength)
                        {
                            Console.WriteLine($"✓ Replaced with flexible pattern");
                        }
                    }
                }
                
                Console.WriteLine($"Updated markdown length: {updatedMarkdown.Length}");
                Console.WriteLine($"Number of image references: {Regex.Matches(updatedMarkdown, @"!\[Mermaid Diagram").Count}");
                
                // Generate DOCX if Pandoc format selected
                if (selectedFormat == ExportFormat.Pandoc)
                {
                    statusMessage = $"Step 6/6: Generating document...";
                    StateHasChanged();
                    await Task.Delay(100);
                    
                    Console.WriteLine("Converting updated markdown to HTML...");
                    Console.WriteLine($"Updated markdown preview: {updatedMarkdown.Substring(0, Math.Min(200, updatedMarkdown.Length))}...");
                    
                    // Convert UPDATED markdown to HTML (this should have image links, not mermaid blocks)
                    var finalHtml = Markdig.Markdown.ToHtml(updatedMarkdown);
                    
                    Console.WriteLine($"Converted HTML preview: {finalHtml.Substring(0, Math.Min(200, finalHtml.Length))}...");
                    Console.WriteLine($"HTML contains mermaid-diagram references: {finalHtml.Contains("mermaid-diagram")}");
                    
                    // Replace image references with PNG data URIs
                    for (int i = 0; i < diagrams.Count; i++)
                    {
                        var diagram = diagrams[i];
                        var imagePlaceholder = $"mermaid-diagram-{i + 1}.png";
                        
                        Console.WriteLine($"Looking for: {imagePlaceholder}");
                        Console.WriteLine($"HTML contains it: {finalHtml.Contains(imagePlaceholder)}");
                        
                        if (!string.IsNullOrEmpty(diagram.RenderedPng))
                        {
                            var dataUri = $"data:image/png;base64,{diagram.RenderedPng}";
                            
                            // Replace both possible formats
                            finalHtml = finalHtml.Replace($"src=\"{imagePlaceholder}\"", $"src=\"{dataUri}\"");
                            finalHtml = finalHtml.Replace($"src='{imagePlaceholder}'", $"src='{dataUri}'");
                            
                            Console.WriteLine($"Replaced {imagePlaceholder} with PNG data URI");
                        }
                        else
                        {
                            Console.WriteLine($"⚠️ No PNG data for diagram {i + 1}");
                        }
                    }
                    
                    Console.WriteLine($"Final HTML still contains mermaid-diagram: {finalHtml.Contains("mermaid-diagram")}");
                    
                    // Generate DOCX based on selected mode
                    ConversionResult docxResult;
                    
                    if (conversionMode == "pandoc")
                    {
                        // Use Pandoc WASM for conversion
                        statusMessage = $"Step 6/6: Converting with Pandoc WASM to {outputFormat.ToUpper()}...";
                        StateHasChanged();
                        await Task.Delay(100);
                        
                        try
                        {
                            // Replace PNG file references with data URIs in the markdown
                            string markdownWithDataUris = updatedMarkdown;
                            for (int i = 0; i < diagrams.Count; i++)
                            {
                                var diagram = diagrams[i];
                                var imagePlaceholder = $"mermaid-diagram-{i + 1}.png";
                                
                                if (!string.IsNullOrEmpty(diagram.RenderedPng))
                                {
                                    var dataUri = $"data:image/png;base64,{diagram.RenderedPng}";
                                    markdownWithDataUris = markdownWithDataUris.Replace(imagePlaceholder, dataUri);
                                    Console.WriteLine($"✅ Embedded PNG data URI for diagram {i + 1}");
                                }
                                else
                                {
                                    Console.WriteLine($"⚠️ No PNG data for diagram {i + 1}");
                                }
                            }
                            
                            byte[]? outputBytes = null;
                            string mimeType = "";
                            string fileExtension = "";
                            
                            if (outputFormat == "docx")
                            {
                                outputBytes = await PandocService.ConvertMarkdownToDocxAsync(markdownWithDataUris);
                                mimeType = "application/vnd.openxmlformats-officedocument.wordprocessingml.document";
                                fileExtension = "docx";
                            }
                            else if (outputFormat == "pdf")
                            {
                                // Generate HTML and use browser print
                                outputBytes = await PandocService.ConvertMarkdownToPdfAsync(markdownWithDataUris);
                                mimeType = "text/html";
                                fileExtension = "html";
                            }
                            else if (outputFormat == "html")
                            {
                                outputBytes = await PandocService.ConvertMarkdownToPdfAsync(markdownWithDataUris); // Uses same HTML generation
                                mimeType = "text/html";
                                fileExtension = "html";
                            }
                            else if (outputFormat == "pptx")
                            {
                                outputBytes = await PandocService.ConvertMarkdownToPptxAsync(markdownWithDataUris);
                                mimeType = "application/vnd.openxmlformats-officedocument.presentationml.presentation";
                                fileExtension = "pptx";
                            }
                            else if (outputFormat == "beamer")
                            {
                                outputBytes = await PandocService.ConvertMarkdownToBeamerAsync(markdownWithDataUris);
                                mimeType = "application/x-latex";
                                fileExtension = "tex";
                            }
                            else if (outputFormat == "revealjs")
                            {
                                outputBytes = await PandocService.ConvertMarkdownToRevealJsAsync(markdownWithDataUris);
                                mimeType = "text/html";
                                fileExtension = "html";
                            }
                            
                            if (outputBytes != null && outputBytes.Length > 0)
                            {
                                // For PDF format, open HTML in new tab for printing
                                if (outputFormat == "pdf")
                                {
                                    var htmlContent = System.Text.Encoding.UTF8.GetString(outputBytes);
                                    await JSRuntime.InvokeVoidAsync("openHtmlForPrint", htmlContent, $"{fileName}.pdf");
                                    
                                    docxResult = new ConversionResult
                                    {
                                        Success = true,
                                        FileName = $"{fileName}.pdf",
                                        MimeType = "application/pdf",
                                        FileData = Array.Empty<byte>() // No download, using print dialog
                                    };
                                    
                                    statusMessage = "✅ PDF preview opened! Use browser Print → Save as PDF";
                                    statusSuccess = true;
                                    return; // Don't trigger download
                                }
                                else
                                {
                                    docxResult = new ConversionResult
                                    {
                                        Success = true,
                                        FileName = $"{fileName}.{fileExtension}",
                                        MimeType = mimeType,
                                        FileData = outputBytes
                                    };
                                }
                            }
                            else
                            {
                                docxResult = new ConversionResult
                                {
                                    Success = false,
                                    ErrorMessage = "Pandoc WASM returned empty result"
                                };
                            }
                        }
                        catch (Exception ex)
                        {
                            Console.WriteLine($"❌ Pandoc WASM conversion failed: {ex.Message}");
                            docxResult = new ConversionResult
                            {
                                Success = false,
                                ErrorMessage = $"Pandoc WASM error: {ex.Message}"
                            };
                        }
                    }
                    else
                    {
                        // Use custom DocxConverter
                        docxResult = await DocxConverter.ConvertToDocx(finalHtml, diagrams, $"{fileName}.docx");
                    }
                    
                    if (docxResult.Success && docxResult.FileData != null)
                    {
                        var docxBase64 = Convert.ToBase64String(docxResult.FileData);
                        await JSRuntime.InvokeVoidAsync("downloadFile", docxResult.FileName, docxResult.MimeType, docxBase64);
                        
                        pandocCommand = ""; // Clear command since we generated it directly
                        var modeLabel = conversionMode == "pandoc" ? "Pandoc WASM" : "Custom Converter";
                        statusMessage = $"✅ SUCCESS! Word document generated with {diagrams.Count} embedded diagram(s) using {modeLabel}!";
                    }
                    else
                    {
                        pandocCommand = "";
                        statusMessage = $"❌ DOCX generation failed: {docxResult.ErrorMessage}";
                    }
                }
                
                statusSuccess = true;
            }


        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Error during conversion: {ex.Message}";
            statusSuccess = false;
            Console.WriteLine($"Error in workflow: {ex}");
        }
        finally
        {
            isConverting = false;
            StateHasChanged();
        }
    }

    private async Task GenerateOutputFile(string html, List<MermaidDiagram> diagrams)
    {
        try
        {
            // Replace image references with data URIs
            string finalHtml = html;
            for (int i = 0; i < diagrams.Count; i++)
            {
                var diagram = diagrams[i];
                var imagePlaceholder = $"mermaid-diagram-{i + 1}.png";
                
                // Create data URI based on format
                string dataUri;
                if (selectedFormat == ExportFormat.Html)
                {
                    // For HTML, use SVG for best quality
                    var svgBase64 = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(diagram.RenderedSvg));
                    dataUri = $"data:image/svg+xml;base64,{svgBase64}";
                }
                else
                {
                    // For DOCX and PDF, use PNG
                    if (!string.IsNullOrEmpty(diagram.RenderedPng))
                    {
                        dataUri = $"data:image/png;base64,{diagram.RenderedPng}";
                    }
                    else
                    {
                        // Fallback to SVG if PNG conversion failed
                        var svgBase64 = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(diagram.RenderedSvg));
                        dataUri = $"data:image/svg+xml;base64,{svgBase64}";
                    }
                }
                
                // Replace the image reference with data URI
                finalHtml = finalHtml.Replace($"src=\"{imagePlaceholder}\"", $"src=\"{dataUri}\"");
            }

            // Generate the output file
            ConversionResult result;
            
            if (selectedFormat == ExportFormat.Docx)
            {
                result = await DocxConverter.ConvertToDocx(finalHtml, diagrams, $"{fileName}.docx");
            }
            else if (selectedFormat == ExportFormat.Pdf)
            {
                result = await PdfConverter.ConvertToPdf(finalHtml, diagrams, $"{fileName}.pdf");
            }
            else // HTML
            {
                result = await ConvertToHtml(finalHtml, $"{fileName}.html");
            }

            if (result.Success && result.FileData != null)
            {
                // Download the file
                var base64 = Convert.ToBase64String(result.FileData);
                await JSRuntime.InvokeVoidAsync("downloadFile", result.FileName, result.MimeType, base64);

                statusMessage = $"✅ Successfully converted and downloaded: {result.FileName}";
                statusSuccess = true;

                // Show preview for HTML
                if (selectedFormat == ExportFormat.Html)
                {
                    previewHtml = finalHtml;
                    showPreview = true;
                }
            }
            else
            {
                statusMessage = $"❌ Conversion failed: {result.ErrorMessage}";
                statusSuccess = false;
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Error generating output: {ex.Message}";
            statusSuccess = false;
            Console.WriteLine($"Error in GenerateOutputFile: {ex}");
        }
    }

